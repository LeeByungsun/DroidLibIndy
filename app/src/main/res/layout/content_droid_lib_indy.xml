<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DroidLibIndy"
    tools:showIn="@layout/activity_droid_lib_indy">

    <Button
        android:id="@+id/createCredential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="create credential"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/integration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/integration"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/integration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="integration"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createCredential"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/creatProof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="creat proof"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/verifyProof"
        app:layout_constraintEnd_toEndOf="@+id/createCredential"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/integration"
        app:layout_constraintTop_toTopOf="@+id/verifyProof"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/verifyProof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="verify credential"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/creatProof"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/integration"
        app:layout_constraintTop_toBottomOf="@+id/integration"
        app:layout_constraintVertical_bias="0.162" />

    <Button
        android:id="@+id/anoncreds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="anoncreds"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyProof"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>